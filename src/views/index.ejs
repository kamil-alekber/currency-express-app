<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/main.css" />
    <title>Document</title>
  </head>
  <body>
    <h1>currency app for your family and friends</h1>
  <form action="/" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken%>">
    <label for="name">check scrf</label>
    <input id="name" type="text" name="name" value="default"/>
    <button type="submit">submit the form</button>
  </form>
  <p class="<% if(isFresh){%>
    fresh
  <%} else {%>
    old
  <%}; %>"><b > <%= data.header%><b></p>
    <button><a href="/?refresh=true">refresh</a></button>
    <ul class="container">
     <% data.data.forEach((currency)=> { %>
      <li class="card"><%= currency.name %> - <%= currency.value%> KZT</li>
      <% }); %>
    </ul>
  </body>
</html>
